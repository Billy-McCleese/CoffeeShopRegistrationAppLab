@model UserProfile

<!DOCTYPE html>
<html>
<head>
    <title>Sign Up</title>

    <style>
        form label {
            display: inline-block;
            width: 120px;
        }

        form input, form select {
            display: inline-block;
            width: 200px;
        }

        form div {
            display: flex;
            flex-direction: row;
            align-items: center;
            margin-bottom: 10px;
        }

        body.dark-mode {
            background-color: #333;
            color: white;
        }

            body.dark-mode form label {
                color: white;
            }

            body.dark-mode form input,
            body.dark-mode form select {
                background-color: #555;
                color: white;
            }

                body.dark-mode form input::placeholder,
                body.dark-mode form select::placeholder {
                    color: #bbb;
                }

            body.dark-mode form div {
                background-color: #222;
                border-radius: 4px;
                padding: 10px;
            }

                body.dark-mode form div:not(:last-child) {
                    margin-bottom: 5px;
                }
    </style>
</head>
<body>
    <h1>Sign Up</h1>

    <div>
        <button onclick="toggleDarkMode()">Toggle Dark Mode</button>
    </div>

    <form asp-controller="Home" asp-action="HandleSubmit" method="post" role="form">
        <div>
            <label asp-for="FirstName">First Name:</label>
            <input asp-for="FirstName" />
        </div>

        <div>
            <label asp-for="LastName">Last Name:</label>
            <input asp-for="LastName" />
        </div>

        <div>
            <label asp-for="EmailAddress">Email Address:</label>
            <input asp-for="EmailAddress" />
        </div>

        <div>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" />
        </div>

        <div>
            <label asp-for="State">State:</label>
            <select asp-for="State" asp-items="@(new SelectList(ViewBag.States, "Value", "Text"))"></select>
        </div>

        <div>
            <input type="submit" />
        </div>

    </form>

    <script>
        function toggleDarkMode() {
            document.body.classList.toggle('dark-mode');
        }
    </script>
</body>
</html>
